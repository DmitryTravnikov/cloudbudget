							a.prevdef.header__menu-link.header__menu-sign-up(href="#") Sign Up
				.header__select-block
					.header__lang-pic-container
						.header__lang-pic.header__lang-pic1.active
						.header__lang-pic.header__lang-pic2
					.header__select-container
						select.header__lang-select-real(name="lang")
							option.header__select-option-real(value="en") En
							option.header__select-option-real(value="ru") Ru

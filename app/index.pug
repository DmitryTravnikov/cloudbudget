					.saving-money__carousel
						img.saving-money__slide.saving-money__slide1.left(src="assets/saving-money__pic1.jpg", alt="pic")
						img.saving-money__slide.saving-money__slide2.center(src="assets/saving-money__pic2.jpg", alt="pic")
						img.saving-money__slide.saving-money__slide3.right(src="assets/saving-money__pic3.jpg", alt="pic")


						.header__fake-options-container
							output.header__lang-select-option-fake En
							output.header__lang-select-option-fake Ru
				button.header__login-button Login

		//- Main Section
		section.main#home
			.main__overlay
			.main__text-container
				h1.main__headline CloudBudget
				p.main__paragraph Cloud budget management for everyone. Only €69.95 a Month After a 7 Day Trial of Up to €4.99
				button.main__sign-up-button Sign Up

		//- Video Section
		section.video-section#overview
			.video-section__wrapper.wrapper
				.video-section__block.video-section__block1
					h3.video-section__headline Easy to Use Cloud Budget Management Software
					p.video-section__paragraph Our software is made so you can access and manage your budget and expenses online at any time from any device. It provides detailed income and expense reports with graphs so you can easilly see your spending patterns and budget at a glance. Read below to find out more.
					a.prevdef.video-section__learn-more(href="#") Learn More
				.video-section__block.video-section__block2
					.video-section__video-container
						.video-section__video-overlay
						iframe.video-section__video(width="901" height="380" src="https://www.youtube.com/embed/Fd3dxjLEfq8?autoplay=0&amp;enablejsapi=1&amp;playerapiid=ytplayer;showinfo=0&controls=1" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
					button.video-section__play-button

		//- Features
		section.features#features
			h3.features__headline Features
			.features__wrapper.wrapper
				.features__block.features__block1
					img.features__block-img(src="assets/features__pic1.jpg", alt="pic")
					.features__block-text-container
						h3.features__block-headline Supports All Currencies and Cards
						p.features__block-paragraph We support all popular currencies and is fully customizable to add
						a.prevdef.features__read-more(href="#") Read More
				.features__block.features__block2
					img.features__block-img(src="assets/features__pic2.jpg", alt="pic")
					.features__block-text-container
						h3.features__block-headline Manage your expenses on the go
						p.features__block-paragraph You can access your account from anywhere in the world on any device
						a.prevdef.features__read-more(href="#") Read More
				.features__block.features__block3
					img.features__block-img(src="assets/features__pic3.jpg", alt="pic")
					.features__block-text-container
						h3.features__block-headline Cloud Budget Management Software
						p.features__block-paragraph Our software is made so you can access and manage your budget
						a.prevdef.features__read-more(href="#") Read More

		//- Technology
		section.technology#technology
			h3.technology__headline Technology
			.technology__wrapper.wrapper
				.technology__block.technology__block1
					p.technology__block-icon.technology__block-icon1 01
					h3.technology__block-headline Cloud Storage
					p.technology__block-paragraph Access your account from anywhere in the world on any device
				.technology__block.technology__block2
					p.technology__block-icon.technology__block-icon2 02
					h3.technology__block-headline Secure
					p.technology__block-paragraph All your information is stored on secure cloud servers
				.technology__block.technology__block3
					p.technology__block-icon.technology__block-icon3 03
					h3.technology__block-headline PDF Download
					p.technology__block-paragraph Download any of your reports in PDF format
				.technology__block.technology__block4
					p.technology__block-icon.technology__block-icon4 04
					h3.technology__block-headline CSV Download
					p.technology__block-paragraph All your information is stored on secure cloud servers

		//- Saving money
		section.saving-money
			.saving-money__wrapper.wrapper
				.saving-money__block.saving-money__block1
					h3.saving-money__headline Stay focused on saving money
					p.saving-money__paragraph It is important to stay focused on saving money in any way you can. We help you monitor your spending habits so you can easily spot and cut any unnecessary expenses. Simply join today to get started!
					.saving-money__platforms-container
						a.prevdef.saving-money__platform-container(href="#")
							img.saving-money__platform.saving-money__platform1(src="assets/saving-money__icon1.png", alt="pic")

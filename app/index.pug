		//- Header
		header.header
			.header__wrapper.wrapper
				a.prevdef.header__logo-container(href="#")
					img(src="assets/header__cloud-icon.png", alt="pic").header__logo-icon
					h3.header__logo-text CloudBudget
				nav.header__menu-container
					ul.header__menu
						li.header__menu-list-item
							a.prevdef.header__menu-link(href="#overview") Overview
						li.header__menu-list-item
							a.prevdef.header__menu-link(href="#features") Features
						li.header__menu-list-item
